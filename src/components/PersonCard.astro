---
import { Card } from "@astrojs/starlight/components";
import SocialIcon from "./SocialIcon";

interface Social {
  platform: string;
  url: string;
}

interface Props {
  name: string;
  title?: string;
  bio?: string;
  image?: string | { src: string };
  socials?: Social[];
}

const { name, title, bio, image = "", socials = [] } = Astro.props;

const imageUrl = image
  ? typeof image === "string"
    ? image
    : "src" in image
      ? image.src
      : ""
  : "";
const hasImage = Boolean(imageUrl);
---

<div class="person-card-container">
  <Card title={name}>
    <div class="flex flex-col justify-between h-full">
      <p>{title}</p>
      <p>{bio}</p>
      {
        socials.length > 0 && (
          <div class="mt-6 pt-4 flex gap-4 items-center border-t border-white/20">
            {socials.map((social) => (
              <SocialIcon platform={social.platform} url={social.url} />
            ))}
          </div>
        )
      }
    </div>
  </Card>
  {hasImage && <img src={imageUrl} alt={`ZdjÄ™cie: ${name}`} />}
</div>

<style>
  .person-card-container {
    display: contents;
  }
</style>
